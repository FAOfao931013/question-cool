<view>
    <form bindsubmit="formSubmit">
        <view class="weui-cell weui-cell_input weui-cell_vcode">
            <view class="weui-cell__hd">学号</view>
            <view class="weui-cell__bd">
                <input
                    focus
                    class="weui-input"
                    placeholder="请输入学号"
                    name="number"/>
            </view>
        </view>

        <view class="weui-cell weui-cell_input weui-cell_vcode">
            <view class="weui-cell__hd">密码</view>
            <view class="weui-cell__bd">
                <input
                    password
                    class="weui-input"
                    placeholder="请输入密码"
                    name="password"/>
            </view>
        </view>

        <view class="btn-wrap">
            <button class="weui-btn" type="primary" form-type="submit">登录</button>
        </view>

        <view class="btn-wrap">
            <button class="weui-btn bg-orange" type="primary" bindtap="gotoRegister">注册</button>
        </view>
    </form>
</view>