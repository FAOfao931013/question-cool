.upload-pr {
	position: relative;
	top: 50%;
	transform: translateY(-50%);
}

.cells-margin {
	margin: 0 60rpx;
}

.weui-uploader__input-box {
	position: relateive;
	width: 100%;
	height: 260rpx;
	border: dashed #ccc 2rpx;
	margin: 0;
}

.weui-uploader__input-box image {
	width: 28px;
	height: 28px;
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
}

.weui-uploader__input-box::after,
.weui-uploader__input-box::before {
	display: none;
}

.weui-cells::after,
.weui-cells::before {
	display: none;
}

.weui-uploader__input-box image.cancel-img {
	width: 40rpx;
	height: 40rpx;
	left: 100%;
	top: 0;
}