<view class="weui-cells">
    <block
        wx:for="{{questions}}"
        wx:key="{{item.time}}">
        <view>{{item.time}}</view>

        <block
            wx:for="{{item.qts}}"
            wx:for-item="qt"
            wx:key="{{qt.id}}">

            <navigator
                class="weui-cell"
                url="/pages/student/answer/index?id={{qt.id}}">
                <block wx:if="{{qt.type == 'text'}}">
                    {{qt.question}}
                </block>

                <block wx:else>
                    <image
                    style="width:320rpx;height:180rpx;"
                    src="{{qt.question}}" />
                </block>
            </navigator>
        </block>

    </block>
</view>

<view class="reset-out-wrap weui-flex">
    <button
        class="weui-btn bg-orange weui-flex__item"
        type="primary"
        bindtap="gotoReset">
        重置密码
    </button>

    <button
        class="weui-btn weui-flex__item"
        type="primary"
        bindtap="logOut">
        登出
    </button>
</view>
